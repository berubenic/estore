<header id="header" data-hook>
	<nav class="navbar navbar-expand-lg navbar-light">
		<div class='container-fluid'>
			<a class="navbar-brand" href="#">
				<figure id="logo" class='image-fluid' data-hook><%= logo %></figure>
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class='navbar-nav nav-fill w-100'>
					<li id="home-link" data-hook class='nav-item'><%= link_to t('spree.home'), spree.root_path, class: 'nav-link' %></li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Categories
						</a>
						<% categories = @taxonomies.select { |t| t.name == 'Categories' } %>
						<%= nav_tree(categories[0].root, @taxon) %>
					</li>
					<%#= render 'spree/shared/locale_selector' %>
					<%= render partial: 'spree/shared/search' %>
					<%= render partial: 'spree/shared/main_nav_bar' if store_menu? %>
				</ul>
			</div>
		</div>
	</nav>
</header>
